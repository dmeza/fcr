:javascript
  $(function () {
    $.ajax({
      url: '/admin/users/chart_data?type=day',
      method: 'GET',
      dataType: 'json',
      success: onDataReceived
    });

    $.ajax({
      url: '/admin/users/chart_data?type=sum',
      method: 'GET',
      dataType: 'json',
      success: onDataReceived
    });
  });

  // then fetch the data with jQuery
  function onDataReceived(response) {
    var data = response.data;
    var type = response.type;

    var show_points = true;
    var div = '';
    var label = '';
    if(type == 'sum') {
      show_points = false;
      div = "#sumgraph";
      label = 'Total Users';
    } else if(type == 'day') {
      show_points = true;
      div = "#daygraph";
      label = 'Users per Day';
    }

    var p = $.plot($(div), [{
      label: label,
      data: data,
      points: { show: show_points },
      lines: { show: true }
    }], {
      xaxis: {
        mode: "time",
        timeformat: "%b %d, %y",
        minTickSize: [1, "day"],
        tickLength: 5
      },
      grid: { hoverable: true, clickable: false }
    });

    function showTooltip(x, y, contents) {
      $('<div id="tooltip">' + contents + '</div>').css( {
        position: 'absolute',
        display: 'none',
        top: y - 25,
        left: x + 15,
        border: '1px solid #fdd',
        padding: '2px',
        color: 'black',
        'background-color': '#fee',
        opacity: 0.80
      }).appendTo("body").fadeIn(200);
    };

    var previousPoint = null;
    $(div).bind("plothover", function (event, pos, item) {
      $("#x").text(pos.x.toFixed(2));
      $("#y").text(pos.y.toFixed(2));

      if (item) {
        if (previousPoint != item.dataIndex) {
          previousPoint = item.dataIndex;

          $("#tooltip").remove();
          var x = new Date(item.datapoint[0]), y = item.datapoint[1];

          showTooltip(item.pageX, item.pageY, (x.getMonth()+1) + '/' + x.getDate() + '/' + x.getFullYear() + "<br/>Users: "+y);
        }
      }
      else {
        $("#tooltip").remove();
        previousPoint = null;
      }
    });
  }
