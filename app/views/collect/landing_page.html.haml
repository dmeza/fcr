.container
  .row
    .col-lg-12.text-center
      %h1 Fundación Cecilia Rivadeneira
  .row
    .col-lg-12#main-image
      %img{:src => "/assets/slider3.jpg", :alt => ""}



  .row
    .col-lg-4.campaign-info "FCR Info 1"
    .col-lg-5.campaign-info "FCR Info 2"
    .col-lg-3.campaign-info "FCR Info 3"

  .row
    .col-lg-7.campaign-info "FCR Info 4"
    .col-lg-5.campaign-info "FCR Info 5"

  .row#email-registration
    %h1.text-center Regístrese en la campaña
    .col-lg-12.text-center
      = form_tag("/landing_page", method: "post") do
        .row
          .col-lg-12
            .form-group
              = text_field_tag :email,'', class: "form-control", type: "text", id: "email-landing", placeholder: "Correo electrónico", style: "width: 90%; height: 32px; padding: 5px;"
            %br/
            .form-group
              %button.btn.btn-primary{:type => 'submit'}
                Registrarse
