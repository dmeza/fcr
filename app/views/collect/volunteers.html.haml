.container.add_friends
  .row
    %h1 Invita a tus amigos a participar
    = form_tag(registration_path(resource_name), :html => {:class => "form-inline"} ) do
      .row#friends_personal_data
        .col-lg-3
          .form-group
            = label_tag 'Nombre *'
            = text_field_tag :friend_firstname,'', class: "form-control", type: "text", id: "friend_firstname"
        .col-lg-3
          .form-group
            = label_tag 'Apellido *'
            = text_field_tag :friend_lastname,'', class: "form-control", type: "text", id: "friend_lastname"
        .col-lg-3
          .form-group
            = label_tag 'Email *'
            = text_field_tag :friend_email,'', class: "form-control", type: "text", id: "friend_email"
        .col-lg-3
          .form-group
            = label_tag 'MÃ³vil *'
            = text_field_tag :friend_phone,'', class: "form-control phone", type: "text", id: "friend_phone"
      .row.text-center#add_friend_button
        .col-lg-3
          %button#button_add_friend.btn.btn-primary Agregar
      .row.text-center#friends_list
