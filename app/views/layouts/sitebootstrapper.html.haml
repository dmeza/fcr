%html{lang: "es"}
  %head
    %title Sistema de gestion de voluntarios
    %meta{name: "description", content: "#{content_for?(:meta_description) ? yield(:meta_description) : 'Sistema de gestiÃ³n de voluntariado'}"}
    %meta{name: "keywords", content: "#{content_for?(:meta_keywords) ? yield(:meta_keywords) : 'Ecuador, Voluntariado, ayuda'}"}
    %meta{content: "index, follow", name: "robots"}/
    %meta{charset: 'utf-8'}
    %link{href: "/favicon.ico", rel: "shortcut icon"}/
    = stylesheet_link_tag "application"
    = yield :css_content
    = csrf_meta_tag
    %link{:rel => "stylesheet", :href => "https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css", :type => "text/css"}

  %body{id: @page_id ? @page_name : controller_name}
    = render "/shared/facebook_init" if defined? FB_APP_ID

    /Header
    = yield(:lower_menu) if content_for?(:lower_menu)


    / Content

    - if !flash.empty?
      / flash messages
      #flash_messages_container
        #flash_messages
          - flash.each do |name, msg|
            - if msg.is_a?(String)
              .notice{class: "#{name}"}
                %i.icon-warning-sign.icon-white
                #{msg}
          %br/
      / flash messages

    = content_for?(:main_content) ? yield(:main_content) : yield

    / End Content


    / JS files
    = javascript_include_tag "application"

    %script{:src => "https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"}

    - if !flash.empty?
      -# flash messages
      :javascript
        $(function() {
          setTimeout(function(){
            $('#flash_messages_container').hide();
          },3000);
        });
      -# flash messages

    = yield :js_footer
